<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aya.musicalstructure.PlayNowActivity">

    <TextView
        android:id="@+id/playnowLabel_textView"
        style="@style/Labels"
        android:text="Play Now"/>

    <TextView
        android:id="@+id/playnowDescription_textView"
        style="@style/Description"
       android:layout_below="@id/playnowLabel_textView"
        android:text="@string/playNow_description" />

    <ImageView
        android:id="@+id/music_imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/playnowDescription_textView"
        android:scaleType="centerCrop"
        android:src="@drawable/colorful_music" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            style="@style/PlayNowIcons"
            android:src="@drawable/ic_replay_black_24dp" />

        <ImageView
            style="@style/PlayNowIcons"
            android:src="@drawable/ic_favorite_border_black_24dp" />

        <ImageView
            style="@style/PlayNowIcons"
            android:src="@drawable/ic_skip_previous_black_24dp" />

        <ImageView
            style="@style/PlayNowIcons"
            android:src="@drawable/ic_play_circle_outline_black_24dp" />

        <ImageView
            style="@style/PlayNowIcons"
            android:src="@drawable/ic_skip_next_black_24dp" />

        <ImageView
            android:id="@+id/playListButton_imageView"
            style="@style/PlayNowIcons"
            android:src="@drawable/ic_queue_music_black_24dp" />

    </LinearLayout>
</RelativeLayout>
