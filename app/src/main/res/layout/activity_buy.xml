<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aya.musicalstructure.BuyActivity">

    <TextView
        android:id="@+id/paymentLabel_textView"
        style="@style/Labels"
        android:text="Payment"/>

    <TextView
        android:id="@+id/paymentDescription_textView"
        style="@style/Description"
        android:layout_below="@id/paymentLabel_textView"
        android:text="@string/payment_description" />

    <Button
        android:id="@+id/payment_button"
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:layout_below="@id/paymentDescription_textView"
        android:layout_margin="16dp"
        android:text="Buy Now"
        android:background="@color/colorPrimaryDark"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            style="@style/PlayNowIcons"
            android:src="@drawable/ic_favorite_border_black_24dp" />

        <ImageView
            android:id="@+id/playNowButton_imageView"
            style="@style/PlayNowIcons"
            android:src="@drawable/ic_play_circle_outline_black_24dp" />

        <ImageView
            style="@style/PlayNowIcons"
            android:src="@drawable/ic_queue_music_black_24dp" />

    </LinearLayout>


</RelativeLayout>
